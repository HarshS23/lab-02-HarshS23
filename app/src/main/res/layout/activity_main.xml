<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">


    <ListView
        android:id="@+id/city_list"
        android:layout_width="438dp"
        android:layout_height="620dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ListView>

    <Button
        android:id="@+id/AddCityButton"
        android:layout_width="212dp"
        android:layout_height="67dp"
        android:layout_marginTop="624dp"
        android:padding="16dp"
        android:text="Add City"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/city_list" />

    <Button
        android:id="@+id/DeleteCityButton"
        android:layout_width="180dp"
        android:layout_height="67dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="624dp"
        android:text="Delete City"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/AddCityButton"
        app:layout_constraintTop_toTopOf="@+id/city_list" />

    <EditText
        android:id="@+id/InputCity"
        android:layout_width="430dp"
        android:layout_height="55dp"
        android:ems="10"
        android:inputType="text"
        android:text="Enter City"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/city_list"
        app:layout_constraintVertical_bias="0.879" />

    <Button
        android:id="@+id/Confirm"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.963" />

</androidx.constraintlayout.widget.ConstraintLayout>